extends ../layout

block content
  .container
    h1.main-title= gongmo.title

    .gongmo.show
      .content= gongmo.content
      include _gongmo

      .buttons
        if currentUser
          button.btn.btn-primary.gongmo-like-btn(data-id=gongmo.id) 
            span.for-loading #[i.fa.fa-spin.fa-refresh] Loading
            span #[i.fa.fa-thumbs-up] Like
          if gongmo.author && gongmo.author.id == currentUser.id
            | 
            a.btn.btn-outline-secondary(href=`/gongmos/${gongmo.id}/edit`) Edit
            | 
            a.btn.btn-outline-danger.need-confirm-btn(href=`/gongmos/${gongmo.id}?_method=delete`) Delete
      
    if gongmo.numAnswers > 0
      hr
      h3 #{gongmo.numAnswers} Answer(s)
      .answers.show
        each answer in answers
          include _answer

    if currentUser
      form(action=`/gongmos/${gongmo.id}/answers`, method='POST')
        .form-group
          label(for='answer') Your Answer
          textarea.form-control(name="content", rows="5")
        button.btn.btn-primary(type="submit") Post Your Answer


  script(src='/javascripts/gongmo_client.js')