.form-group
  label(for="title") Title
  input.form-control(type="text", name="title", placeholder="What's your gongmo?", value=gongmo.title)
.form-group
  label(for="gongmo") Gongmo
  textarea.form-control(name="content", rows="5")= gongmo.content
.form-group
  label(for="tags") Tags
  input.form-control(type="text", name="tags", placeholder="tags separated by spaces", value=gongmo.tags ? gongmo.tags.join(" ") : "")
